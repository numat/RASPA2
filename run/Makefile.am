	$(PERL) -e "print(\"#! ${CSH} -f\n\");print(\"#autogenerated cshell script to run RASPA\n\");print(\"# (C) 2008 D.Dubbeldam\n\"); use Cwd 'abs_path'; print(\"setenv RASPA_DIR \"); print(abs_path(\"${prefix}\"));printf(\"\n\");print(\"\\$$\{RASPA_DIR\}/src/simulate\n\");" > run
	echo 'creating run'
	chmod a+x run
	$(PERL) -e "printf(\"#BSUB -W 335:00\n#BSUB -M 128000\n#BSUB -J dd-\n#BSUB -e stderr.%J\n#BSUB -o stdout.%J\n#BSUB -n 1\n#BSUB -nr\n./run\n\");" > bsub.job
	echo 'creating bsub.job'
